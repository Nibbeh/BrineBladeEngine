{
  "$id": "Item.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "Id",
    "Name",
    "Type",
    "Weight",
    "Value"
  ],
  "properties": {
    "Id": {
      "type": "string"
    },
    "Name": {
      "type": "string"
    },
    "Type": {
      "type": "string",
      "enum": [
        "Weapon",
        "Armor",
        "Shield",
        "Consumable",
        "Material",
        "Quest",
        "Misc"
      ]
    },
    "Weight": {
      "type": "number"
    },
    "Value": {
      "type": "integer"
    },
    "Stackable": {
      "type": "boolean"
    },
    "MaxStack": {
      "type": "integer"
    },
    "Slot": {
      "type": "string",
      "enum": [
        "Head",
        "Chest",
        "Legs",
        "Feet",
        "Hands",
        "Weapon",
        "Offhand",
        "Accessory"
      ]
    },
    "ArmorType": {
      "type": "string",
      "enum": [
        "Cloth",
        "Leather",
        "Plate"
      ]
    },
    "WeaponType": {
      "type": "string",
      "enum": [
        "OneHanded",
        "TwoHanded",
        "Ranged",
        "Staff",
        "Dagger"
      ]
    },
    "AllowedClasses": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "Bonuses": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Strength": {
          "type": "integer"
        },
        "Dexterity": {
          "type": "integer"
        },
        "Intelligence": {
          "type": "integer"
        },
        "Vitality": {
          "type": "integer"
        },
        "Charisma": {
          "type": "integer"
        },
        "Perception": {
          "type": "integer"
        },
        "Luck": {
          "type": "integer"
        }
      }
    }
  }
}