          "type": "integer"
        },
        "Dexterity": {
          "type": "integer"
        },
        "Intelligence": {
          "type": "integer"
        },
        "Vitality": {
          "type": "integer"
        },
        "Charisma": {
          "type": "integer"
        },
        "Perception": {
          "type": "integer"
        },
        "Luck": {
          "type": "integer"
        }
      }
    },
    "Abilities": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "Level": {
      "type": "integer"
    },
    "Hp": {
      "type": "integer"
    },
    "Mana": {
      "type": "integer"
