{
    "Id": "D_DOCKMASTER",
    "NpcId": "Dockmaster Ulan",
    "StartLineId": "start",
    "Lines": {
        "start": {
            "Text": "Busy day. The city’s shut until the council says otherwise. Refugees have every quay choking.",
            "Choices": [
                {
                    "Label": "Why is the gate closed?",
                    "Goto": "closure"
                },
                {
                    "Label": "Any honest work while I wait?",
                    "Goto": "work"
                },
                {
                    "Label": "I heard whispers about a Brenn under the piers.",
                    "Goto": "brenn",
                    "Requires": [ "flag:lead.brenn" ]
                },
                {
                    "Label": "Leave",
                    "Effects": [ { "Op": "endDialogue" } ]
                }
            ]
        },
        "closure": {
            "Text": "War pushes south. Folk are scared, tempers short. We keep order; that means the gate stays shut.",
            "Effects": [
                {
                    "Op": "setFlag",
                    "Id": "gate.closed"
                },
                {
                    "Op": "advanceTime",
                    "Minutes": 2
                }
            ],
            "Choices": [
                {
                    "Label": "Back",
                    "Goto": "start"
                }
            ]
        },
        "work": {
            "Text": "Unloaders always needed. Pay’s thin, backs ache. Try the imperial wharf.",
            "Effects": [
                {
                    "Op": "setFlag",
                    "Id": "tip.wharf"
                }
            ],
            "Choices": [
                {
                    "Label": "Thanks",
                    "Effects": [ { "Op": "endDialogue" } ]
                }
            ]
        },
        "brenn": {
            "Text": "Keep your voice down. If there’s smuggling, I want it quiet and clean.",
            "Effects": [
                {
                    "Op": "setFlag",
                    "Id": "lead.reported"
                },
                {
                    "Op": "addGold",
                    "Amount": 2
                }
            ],
            "Choices": [
                {
                    "Label": "Understood.",
                    "Effects": [ { "Op": "endDialogue" } ]
                }
            ]
        }
    }
}
